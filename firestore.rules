rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permite que CUALQUIERA pueda leer los datos (ver canciones, setlists, etc.)
    // Esto solucionará el error "Missing or insufficient permissions" de una vez por todas.
    match /{document=**} {
      allow read: if true;
    }

    // Solo permite que los usuarios que han iniciado sesión puedan escribir datos
    // (crear, actualizar, borrar canciones y setlists).
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}
